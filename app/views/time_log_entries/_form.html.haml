- form_for [@project, @time_log_entry] do |f|
  = f.error_messages
  %p
    = f.label :formatted_created_at, t("start_date")
    = f.text_field :formatted_created_at
  %p
    = f.label :formatted_number_of_seconds, t("worked_time")
    = f.text_field :formatted_number_of_seconds
  %p
    = f.label :user_story_id, t("models.user_story.name")
    = f.collection_select :user_story_id, @project.user_stories.find(:all, sort: ["updated_at", "desc"]), :id, :text
  = f.hidden_field :current, :value => 0
  %p
    = f.submit t("submit")

